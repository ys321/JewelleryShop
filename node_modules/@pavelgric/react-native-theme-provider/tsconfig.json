
{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "**/__tests__/*"
  ],
  "exclude": [
    "node_modules",
    "example",
    "node_modules/@types/react-native/globals.d.ts"
  ]
}
